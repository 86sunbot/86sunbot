---
import '../styles/theme.css';

const pageTitle = "86sunbot - Contact";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-gray-900 text-cyan-400">
    <header class="neon-border p-6">
      <nav class="flex justify-between items-center">
        <h1 class="text-4xl font-bold neon-text">86sunbot</h1>
        <ul class="flex gap-6">
          <li><a href="/" class="neon-link">Home</a></li>
          <li><a href="/about" class="neon-link">About</a></li>
          <li><a href="/projects" class="neon-link">Projects</a></li>
          <li><a href="/blog" class="neon-link">Blog</a></li>
          <li><a href="/contact" class="neon-link active">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main class="container mx-auto px-6 py-12">
      <section class="max-w-4xl mx-auto">
        <h2 class="text-5xl font-bold mb-8 neon-glow">Get in Touch</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="cyber-card p-8">
            <h3 class="text-3xl font-bold mb-4 text-pink-500">Connect with Me</h3>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <span class="text-cyan-400 text-xl">‚úâÔ∏è</span>
                <a href="mailto:contact@86sunbot.dev" class="text-gray-300 hover:text-pink-400">contact@86sunbot.dev</a>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-cyan-400 text-xl">üêô</span>
                <a href="https://github.com/86sunbot" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-pink-400">github.com/86sunbot</a>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-cyan-400 text-xl">üåê</span>
                <a href="https://sunexplains.com" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-pink-400">sunexplains.com</a>
              </div>
            </div>
          </div>

          <div class="cyber-card p-8">
            <h3 class="text-3xl font-bold mb-4 text-pink-500">Let's Collaborate</h3>
            <p class="text-gray-300 mb-4">
              I'm always interested in:
            </p>
            <ul class="list-disc list-inside text-gray-300 space-y-2">
              <li>Web development projects</li>
              <li>Open source contributions</li>
              <li>Tech writing and content creation</li>
              <li>AI and machine learning experiments</li>
              <li>Cyberpunk-themed design projects</li>
            </ul>
          </div>
        </div>

        <div class="cyber-card p-8">
          <h3 class="text-3xl font-bold mb-6 text-pink-500">Send a Message</h3>
          <form class="space-y-4">
            <div>
              <label for="name" class="block text-cyan-400 mb-2">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-2 bg-gray-800 border border-cyan-500 text-gray-300 rounded focus:outline-none focus:border-pink-500"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-cyan-400 mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-2 bg-gray-800 border border-cyan-500 text-gray-300 rounded focus:outline-none focus:border-pink-500"
                placeholder="your.email@example.com"
              />
            </div>
            <div>
              <label for="message" class="block text-cyan-400 mb-2">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6"
                class="w-full px-4 py-2 bg-gray-800 border border-cyan-500 text-gray-300 rounded focus:outline-none focus:border-pink-500"
                placeholder="Your message..."
              ></textarea>
            </div>
            <button 
              type="submit" 
              class="px-8 py-3 bg-pink-600 hover:bg-pink-700 text-white font-bold rounded-lg transition-colors neon-glow"
            >
              Send Message
            </button>
          </form>
        </div>
      </section>
    </main>

    <footer class="text-center py-8 text-gray-500 border-t border-cyan-800">
      <p>&copy; 2025 86sunbot. All rights reserved.</p>
    </footer>
  </body>
</html>
